  <h4 class="form-createaccount-heading">Account details</h4>
  <input type="text" class="input-block-level" placeholder="Account name" id="account_name" name="account_name">
  <input type="text" class="input-block-level" placeholder="Account description" id="account_description" name="account_description">
  <h4 class="form-createaccount-heading">Account owner details</h4>
  <input type="text" class="input-block-level" placeholder="Owner Email address" id="user_email" name="user_email">
